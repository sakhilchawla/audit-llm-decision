# Server Configuration
PORT=4000                  # Port the MCP logging server will run on
NODE_ENV=development

# Database Configuration
DB_USER=postgres          # PostgreSQL username
DB_PASSWORD=your_password # PostgreSQL password
DB_HOST=localhost         # Database host (use actual host if running in production)
DB_PORT=5432             # PostgreSQL port
DB_NAME=mcp_logs         # Database name
DB_SSL=false             # Set to true if your database requires SSL
DB_SSL_REJECT_UNAUTHORIZED=true  # Set to false to accept self-signed certificates
DB_MAX_POOL_SIZE=20      # Maximum number of clients in the connection pool
DB_IDLE_TIMEOUT=10000    # How long a client is allowed to remain idle (ms)
DB_CONNECTION_TIMEOUT=0   # How long to wait for a connection (0 = no timeout)
DB_APPLICATION_NAME="mcp_logger"  # Application name for database monitoring
DB_SCHEMA="public"       # Database schema to use

# Optional Configuration
LOG_LEVEL=info           # Logging level (debug, info, warn, error)
ENABLE_METRICS=false     # Enable prometheus metrics endpoint 